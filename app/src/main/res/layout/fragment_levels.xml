<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/ic_start_page_logo"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotation="45"
            android:scaleY="2"
            android:scaleX="2"
            android:alpha="0.15"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            tools:itemCount="81"
            tools:listitem="@layout/fragment_levels_list_item"
            android:paddingHorizontal="@dimen/horizontal_large"
            android:visibility="gone"
            />

        <View
            android:id="@+id/top_gradient"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.2"
            android:background="@drawable/levels_gradient_top"
            />

        <View
            android:id="@+id/bottom_gradient"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            android:background="@drawable/levels_gradient_bottom"
            />

        <TextView
            android:id="@+id/no_levels_complete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/no_levels_completed"
            style="@style/HeadingMediumTextStyle"
            app:layout_constraintTop_toBottomOf="@id/top_gradient"
            app:layout_constraintBottom_toTopOf="@id/bottom_gradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/primary_text_color"
            android:gravity="center"
            android:paddingHorizontal="@dimen/horizontal_xlarge"
            android:lineSpacingMultiplier="1.4"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:backgroundTint="@color/background"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/vertical_default"
                android:tint="@color/primary_text_color"
                app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

        </androidx.appcompat.widget.Toolbar>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>